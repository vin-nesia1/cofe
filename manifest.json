    "shortcuts": [
        {
            "name": "Portfolio",
            "short_name": "Portfolio", 
            "description": "Lihat portfolio projects terbaru",
            "url": "/#portfolio",
            "icons": [
                {
                    "src": "icons/portfolio-shortcut-96.png",
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Contact", 
            "short_name": "Contact",
            "description": "Hubungi VIN NESIA via WhatsApp",
            "url": "/#contact",
            "icons": [
                {
                    "src": "icons/contact-shortcut-96.png", 
                    "sizes": "96x96"
                }
            ]
        },
        {
            "name": "Services",
            "short_name": "Services",
            "description": "Layanan web development profesional", 
            "url": "/#services",
            "icons": [
                {
                    "src": "icons/services-shortcut-96.png",
                    "sizes": "96x96" 
                }
            ]
        }
    ],
    
    "related_applications": [
        {
            "platform": "web",
            "url": "https://vinnesia.my.id"
        }
    ],
    
    "prefer_related_applications": false,
    
    "edge_side_panel": {
        "preferred_width": 400
    },
    
    "launch_handler": {
        "client_mode": ["navigate-existing", "auto"]
    },
    
    "handle_links": "preferred",
    
    "protocol_handlers": [
        {
            "protocol": "mailto",
            "url": "/#contact?compose=%s"
        }
    ],
    
    "file_handlers": [
        {
            "action": "/",
            "accept": {
                "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp"]
            }
        }
    ],
    
    "share_target": {
        "action": "/#contact",
        "method": "GET",
        "params": {
            "title": "title",
            "text": "text", 
            "url": "url"
        }
    }
}
